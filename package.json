{
  "name": "personal-blog",
  "version": "1.0.0",
  "description": "Set up a Github Page personal blog",
  "main": "index.js",
  "sideEffects": false,
  "scripts": {
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "lint": "prettier --write 'docs/**/*.md'",
    "deploy:start": "bash deploy.sh",
    "deploy": "gh-pages -d dist",
    "deploy:build": "yarn docs:build && gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amoursun/blob.git"
  },
  "keywords": [
    "vuepress",
    "blog"
  ],
  "author": "GYL",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amoursun/blob/issues"
  },
  "homepage": "https://github.com/amoursun/blob/blob/master/README.md",
  "husky": {
    "hooks": {
      "pre-commit": "npm run release && git add . && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "preserve": "never"
  },
  "devDependencies": {
    "@vuepress/plugin-back-to-top": "^1.8.2",
    "@vuepress/plugin-google-analytics": "^1.8.2",
    "@vuepress/plugin-medium-zoom": "^1.8.2",
    "@vuepress/plugin-nprogress": "^1.8.2",
    "@vuepress/plugin-pwa": "^1.8.2",
    "@vuepress/theme-blog": "^2.3.3",
    "get-markdown-images": "^1.0.4",
    "gh-pages": "^3.2.3",
    "highlight.js": "^11.2.0",
    "husky": "^7.0.2",
    "leancloud-storage": "^4.12.0",
    "less": "^4.1.2",
    "less-loader": "7.3.0",
    "lint-staged": "^11.2.0",
    "lodash": "^4.17.21",
    "markdown-it-include": "^2.0.0",
    "markdown-toc": "^1.2.0",
    "prettier": "^2.4.1",
    "valine": "^1.4.14",
    "vuepress": "^1.8.2",
    "vuepress-theme-simple": "^1.2.2",
    "vuepress-theme-simple-blog": "^1.1.0"
  },
  "dependencies": {
    "@vuepress/plugin-blog": "^1.9.4",
    "@vuepress/plugin-last-updated": "^1.8.2",
    "axios": "^0.22.0",
    "dayjs": "^1.10.7",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-sub": "^1.0.0"
  }
}
